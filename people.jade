extends layout


block vars
	-var pageid = "people"

block title
	title People
	meta(name='description',content='Members, past and present, of the Broaders lab.')

block content
	-var imgdir = "images/members/"
	.row
		.large-12.columns.biolist

			dl.accordion(data-accordion="")
				dd.accordion-navigation.active
					a(href="#panel1") Current Members
					#panel1.content.active(style="display:block")

						.panel.radius
							.row
								.headshot.medium-4.medium-push-8.columns
									img(src= imgdir+'UnknownStudent.jpg')
								.medium-8.medium-pull-4.columns
									h4 Jackie Long
									p This is a description that Jackie writes.
									table.vcard
										tr
											td Class of 2018
										tr
											td(colspan='3')
												a(href='#') anemailaddress@mtholyoke.edu
										tr
											td(colspan='3')
												a(href='http://www.twitter.com/atwitter')@atwitter

						.panel.radius
							.row
								.headshot.medium-4.medium-push-8.columns
									img(src= imgdir+'UnknownStudent.jpg')
								.medium-8.medium-pull-4.columns
									h4 A Student
									p This is a description that A writes.
									table.vcard
										tr
											td Class of 2016
										tr
											td(colspan='3')
												a(href='#') anemailaddress@mtholyoke.edu
										tr
											td(colspan='3')
												a(href='http://www.twitter.com/atwitter')@atwitter


				dd.accordion-navigation
					a(href="#panel2") Past Members
					#panel2.content
						.panel.radius
							p There are no past members yet!